<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/programming_result_margin_left"
    android:layout_marginEnd="@dimen/programming_result_margin_right"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    app:strokeColor="@color/programming_list_item_result_stroke_color"
    app:strokeWidth="0.75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/programming_list_item_result_header" />

        <com.duy.ide.editor.view.CodeEditor
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:inputType="textImeMultiLine|textMultiLine"
            app:language="java"
            tools:text="Sin(x)+Cos(x)">

        </com.duy.ide.editor.view.CodeEditor>

        <HorizontalScrollView
            android:id="@+id/container_input_latex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbarStyle="outsideInset">

            <com.duy.ncalc.view.NativeLatexView
                android:id="@+id/input_latex_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/programming_result_margin_left"
                android:paddingLeft="@dimen/programming_result_margin_left"
                android:paddingTop="8dp"
                android:paddingEnd="@dimen/programming_result_margin_right"
                android:paddingRight="@dimen/programming_result_margin_right"
                android:paddingBottom="8dp"
                android:textColor="?android:textColorPrimary"
                android:textSize="18sp"
                app:alignHorizontal="start"
                tools:latex="Sin(x)+Cos(x)+Tan(x)" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbarStyle="outsideInset">

            <com.duy.ncalc.view.NativeLatexView
                android:id="@+id/latex_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/programming_result_margin_left"
                android:paddingLeft="@dimen/programming_result_margin_left"
                android:paddingTop="8dp"
                android:paddingEnd="@dimen/programming_result_margin_right"
                android:paddingRight="@dimen/programming_result_margin_right"
                android:paddingBottom="8dp"
                android:textColor="?android:textColorPrimary"
                android:textSize="18sp"
                app:alignHorizontal="end"
                tools:latex="Sin(x)+Cos(x)+Tan(x)" />
        </HorizontalScrollView>

        <include layout="@layout/programming_list_item_result_footer" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>