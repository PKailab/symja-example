<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/programming_result_margin_left"
    android:layout_marginEnd="@dimen/programming_result_margin_right"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    app:strokeColor="@color/programming_list_item_result_stroke_color"
    app:strokeWidth="0.75dp">

    <com.symja.programming.view.viewgroup.BoundedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/programming_list_item_result_header" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/programming_web_result_max_height"
            android:background="@color/white">

            <com.symja.programming.view.mathview.InterceptWebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/programming_web_result_max_height" />
        </FrameLayout>

        <include layout="@layout/programming_list_item_result_footer" />

    </com.symja.programming.view.viewgroup.BoundedLinearLayout>
</com.google.android.material.card.MaterialCardView>
